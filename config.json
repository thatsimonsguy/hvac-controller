{
  "state_file_path": "data/",
  "boot_script_file_path": "/usr/local/bin/configure-gpio.sh",
  "os_service_path": "/etc/systemd/system/configure-gpio.service",
  "zone_max_temp": 85,
  "zone_min_temp": 60,
  "system_override_min_temp": 55,
  "system_override_max_temp": 90,
  "heating_threshold": 105.0,
  "cooling_threshold": 38.0,
  "spread": 5.0,
  "secondary_margin": 10.0,
  "tertiary_margin": 30.0,
  "role_rotation_minutes": 1440,
  "poll_interval_seconds": 30,
  "temp_sensor_bus_gpio": 4,
  "main_power_gpio": 25,
  "main_power_active_high": true,
  "relay_board_active_high": false,
  "zones": [
    {
      "id": "main_floor",
      "label": "Main Floor",
      "setpoint": 70,
      "capabilities": [
        "heating",
        "cooling",
        "fan"
      ],
      "sensor": {
        "id": "main_floor_sensor",
        "bus": "28-xxxxxxxx"
      }
    },
    {
      "id": "basement",
      "label": "Basement",
      "setpoint": 70,
      "capabilities": [
        "heating",
        "cooling",
        "fan"
      ],
      "sensor": {
        "id": "basement_sensor",
        "bus": "28-yyyyyyyy"
      }
    },
    {
      "id": "garage",
      "label": "Garage",
      "setpoint": 55,
      "capabilities": [
        "heating"
      ],
      "sensor": {
        "id": "garage_sensor",
        "bus": "28-zzzzzzzz"
      }
    }
  ],
  "devices": [
    {
      "heat_pumps": {
        "device_profile": {
          "min_time_on": 10,
          "min_time_off": 5,
          "active_modes": [
            "heating",
            "cooling"
          ]
        },
        "devices": [
          {
            "name": "heat_pump_A",
            "gpiopin": {
              "pin": 23,
              "active_high": false
            },
            "mode_pin": {
              "pin": 18,
              "active_high": false
            }
          },
          {
            "name": "heat_pump_B",
            "gpiopin": {
              "pin": 24,
              "active_high": false
            },
            "mode_pin": {
              "pin": 19,
              "active_high": false
            }
          }
        ]
      },
      "air_handlers": {
        "device_profile": {
          "min_time_on": 5,
          "min_time_off": 3,
          "active_modes": [
            "heating",
            "cooling",
            "fan"
          ]
        },
        "devices": [
          {
            "name": "main_floor_air_handler",
            "gpiopin": {
              "pin": 5,
              "active_high": false
            },
            "circ_pump_pin": {
              "pin": 6,
              "active_high": false
            },
            "zone": "main_floor"
          },
          {
            "name": "basement_air_handler",
            "gpiopin": {
              "pin": 12,
              "active_high": false
            },
            "circ_pump_pin": {
              "pin": 13,
              "active_high": false
            },
            "zone": "basement"
          }
        ]
      },
      "radiant_floor_loops": {
        "device_profile": {
          "min_time_on": 5,
          "min_time_off": 3,
          "active_modes": [
            "heating"
          ]
        },
        "devices": [
          {
            "name": "basement_radiant_loop",
            "gpiopin": {
              "pin": 16,
              "active_high": false
            },
            "zone": "basement"
          },
          {
            "name": "garage_radiant_loop",
            "gpiopin": {
              "pin": 17,
              "active_high": false
            },
            "zone": "garage"
          }
        ]
      },
      "boilers": {
        "device_profile": {
          "min_time_on": 2,
          "min_time_off": 5,
          "active_modes": [
            "heating"
          ]
        },
        "devices": [
          {
            "name": "boiler",
            "gpiopin": {
              "pin": 22,
              "active_high": false
            }
          }
        ]
      }
    }
  ],
  "system_sensors": {
    "buffer_tank": {
      "id": "buffer_tank",
      "bus": "28-aaaaaaaa"
    }
  }
}